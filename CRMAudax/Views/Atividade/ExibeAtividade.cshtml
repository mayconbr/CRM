@{
    @using CRMAudax.Controllers;
    ViewData["Title"] = "Atividade";
    IEnumerable<CRMAudax.Models.TableAtividadesCedente> atividade = ViewData["atividade"] as IEnumerable<CRMAudax.Models.TableAtividadesCedente>;
}
<div class="form-style">
    <h3 class="titulo-pagina">Nova Atividade</h3>
    <div class="linha-horizontal"></div>

    <form onsubmit="doCadastrarAtividade(this); return false;">
        <fieldset class="fildsetCadastro">
            <div class="object-input">
                <div>
                    <label>Atividade</label>
                </div>
                <div>
                    <input type="text"
                           name="atividade"
                           id="atividade"
                           value="@atividade.FirstOrDefault().atividade"
                           disabled />
                </div>
            </div>
            <div>
                <div>
                    <label>Data</label>
                </div>
                <div>
                    <input type="text"
                           name="dataAtividade"
                           id="dataAtividade"
                           value=@atividade.FirstOrDefault().dataAtividade""
                           disabled />
                </div>
            </div>
        </fieldset>
        <fieldset class="fildset-padrao">
            <div>
                <div>
                    <label>Descrição:</label>
                </div>
                <div>
                    <textarea rows="6"
                              name="descricao"
                              id="descricao"
                              class="big-input"
                              value="@atividade.FirstOrDefault().descricao"
                              disabled>@atividade.FirstOrDefault().descricao
                    </textarea>
                </div>
            </div>
        </fieldset>
    </form>
</div>

@section Scripts{
    <script>

    </script>
}